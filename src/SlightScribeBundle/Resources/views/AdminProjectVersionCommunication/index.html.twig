{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_version_show',{ 'projectId':project.publicId,'versionId':version.publicId }) }}">Version: {{  version.titleAdmin }}</a></li>
        <li class="active">Communication: {{  communication.titleAdmin }}</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Version {{  version.titleAdmin }} Communication {{  communication.titleAdmin }}</h2>

    <p>
        Email Subject Template:
    </p>
    <div class="templateContents">
        {{ communication.emailSubjectTemplate   }}
    </div>

    <p>
        Email Content HTML Template:
    </p>
    <div class="templateContents">
        {{ communication.emailContentHTMLTemplate | nl2br  }}
    </div>

    <p>
        Email Content Text Template:
    </p>
    <div class="templateContents">
        {{ communication.emailContentTextTemplate | nl2br  }}
    </div>

    <a href="{{  path('slight_scribe_admin_project_version_communication_preview',{'projectId':project.publicId,'versionId':version.publicId,'communicationId':communication.publicId}) }}" class="btn btn-default">Preview</a>
    <a href="{{  path('slight_scribe_admin_project_version_communication_edit',{'projectId':project.publicId,'versionId':version.publicId,'communicationId':communication.publicId}) }}" class="btn btn-default">Edit</a>

    {% if files %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>File</th>
                <th>Filename</th>
                <th>Type</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for file in files %}
                <tr>
                    <td>{{ file.titleAdmin }}</td>
                    <td>{{ file.filename }}</td>
                    <td>
                        {%  if file.isTypeLetterText %}
                            Letter Text
                        {%  elseif file.isTypeLetterPdf %}
                            Letter Pdf
                        {%  endif %}
                    </td>
                    <td class="action-link"><a href="{{  path('slight_scribe_admin_project_version_file_show',{'projectId':project.publicId,'versionId':version.publicId,'fileId':file.publicId}) }}" class="btn btn-default">View</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No files</p>
    {% endif %}


    <a href="{{  path('slight_scribe_admin_project_version_communication_edit_files',{'projectId':project.publicId,'versionId':version.publicId,'communicationId':communication.publicId}) }}" class="btn btn-default">
        Edit Files
    </a>

{% endblock %}
