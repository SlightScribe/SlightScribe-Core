{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{'projectId':project.publicId}) }}">Project: {{  project.titleAdmin }}</a></li>
        <li class="active">Fields</li>
    </ol>

    <h2>Fields</h2>

    {% if fields %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Field</th>
                <th>Title</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for field in fields %}
                <tr>
                    <td>{{ field.publicId }}</td>
                    <td>{{ field.titleAdmin }}</td>
                    <td class="action-link"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No fields</p>
    {% endif %}

{% endblock %}
