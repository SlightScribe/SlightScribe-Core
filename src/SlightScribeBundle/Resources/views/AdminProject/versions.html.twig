{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{'projectId':project.publicId}) }}">Project: {{  project.titleAdmin }}</a></li>
        <li class="active">Versions</li>
    </ol>

    <h2>Versions</h2>

    {% if versions %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Version</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for version in versions %}
                <tr>
                    <td>{{ version.titleAdmin }}</td>
                    <td>
                        {%  if projectVersionPublished ==  version %}Published{%  endif %}
                    </td>
                    <td class="action-link"><a href="{{  path('slight_scribe_admin_project_version_show',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-default">View</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No projects</p>
    {% endif %}

{% endblock %}
