{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{'projectId':project.publicId}) }}">Project: {{  project.titleAdmin }}</a></li>
        <li class="active">New Text Area Field</li>
    </ol>

    <h2>New Text Area Field</h2>


    <section class="">

        <form class="styled" action="" method="post" {{ form_enctype(form) }} id="NewTreeForm">
            {{ form_errors(form) }}

            <div>
                {{ form_row(form.titleAdmin) }}
            </div>

            <div>
                {{ form_row(form.label) }}
            </div>

            <div>
                {{ form_row(form.description) }}
            </div>

            <div>
                {{ form_row(form.publicId) }}
            </div>

            {{ form_rest(form) }}

            <input type="submit" value="Create New Field" />

            <div class="cancel"><a href="{{ path('slight_scribe_admin_project_show',{'projectId':project.publicId}) }}">Cancel</a></div>
        </form>


    </section>

{% endblock %}
