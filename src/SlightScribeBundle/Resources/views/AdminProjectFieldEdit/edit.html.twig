{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_field_show',{ 'projectId':project.publicId,'fieldId':field.publicId }) }}">Field: {{  field.titleAdmin }}</a></li>
        <li class="active">Edit</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Field {{  field.titleAdmin }} Edit</h2>


    <form class="styled" action="" method="post" {{ form_enctype(form) }} id="NewTreeForm">
        {{ form_errors(form) }}



        <div>
            {{ form_row(form.titleAdmin) }}
        </div>
        
        <div>
            {{ form_row(form.label) }}
        </div>

        <div>
            {{ form_row(form.description) }}
        </div>



        {{ form_rest(form) }}

        <input type="submit" value="Edit" />

        <div class="cancel"><a href="{{ path('slight_scribe_admin_project_field_show',{ 'projectId':project.publicId,'fieldId':field.publicId }) }}">Cancel</a></div>
    </form>


{% endblock %}
