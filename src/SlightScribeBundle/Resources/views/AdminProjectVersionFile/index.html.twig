{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_version_show',{ 'projectId':project.publicId,'versionId':version.publicId }) }}">Version: {{  version.titleAdmin }}</a></li>
        <li class="active">File: {{  file.titleAdmin }}</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Version {{  version.titleAdmin }} File {{  file.titleAdmin }}</h2>

    <p>
        Filename:
    </p>
    <p>
        {{ file.filename   }}
    </p>

    <p>
        Letter Content Template:
    </p>
    <p>
        {{ file.letterContentTemplate   }}
    </p>

    <p>
        <a href="{{  path('slight_scribe_admin_project_version_file_edit',{'projectId':project.publicId,'versionId':version.publicId,'fileId':file.publicId}) }}" class="btn btn-default">Edit</a>
    </p>

{% endblock %}
