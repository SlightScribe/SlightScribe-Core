{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_version_show',{ 'projectId':project.publicId,'versionId':version.publicId }) }}">Version: {{  version.titleAdmin }}</a></li>
        <li class="active">Run</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Version {{  version.titleAdmin }} Run</h2>

    <p>Run Created</p>
    <p>{{ run.createdAt | date('r') }}</p>

    <p>Email</p>
    <p>{{ run.email }}</p>

    {% if runFields %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {% for runField in runFields %}
                <tr>
                    <td>{{ runField.field.titleAdmin }}</td>
                    <td>{{ runField.value | nl2br }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No fields</p>
    {% endif %}

{% endblock %}
