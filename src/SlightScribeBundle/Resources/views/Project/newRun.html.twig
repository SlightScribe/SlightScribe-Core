{%  extends 'SlightScribeBundle::base.public.html.twig' %}


{% block main %}

    <form class="styled" action="" method="post" >


        <style>
            .field_required_label {
                font-style: italic;
            }
        </style>

        {% if hasErrors %}
            <style>
                .field_wrapper .field_required_missing {
                    border: 2px solid red;
                }
                .field_wrapper .field_required_missing_label {
                    color: red;
                }
            </style>
            <div>
                Please put in required fields
            </div>
        {% endif %}

        <div style="background: #ccc; padding: 0 0 10px 0;">
            <div style="border: 1px solid black; padding: 5px; background: white;">
                {{  form | raw }}
            </div>

            <div style="padding: 20px;">
                <div class="field_wrapper" style="padding: 20px;">
                    Your Email:
                    <input type="email" name="email" value="{{ email }}" class="field_required {% if hasErrorsEmail %}field_required_missing{%  endif %}">
                    <span class="field_required_label {% if hasErrorsEmail %}field_required_missing_label{%  endif %}">*(required)</span>
                </div>


                <input type="hidden" name="action" value="new">
                <input type="submit" value="Get my letters" />
            </div>
        </div>
    </form>


{% endblock %}
