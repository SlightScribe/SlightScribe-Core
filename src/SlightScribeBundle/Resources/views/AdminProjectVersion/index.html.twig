{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li class="active">Version: {{  version.titleAdmin }}</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Version {{  version.titleAdmin }}</h2>


    {% if isPublishedVersion %}
        <p>
            Published Version!
        </p>
    {% endif %}

    <ul class="list-group">
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_access_points_list',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-default">Access Points</a></li>
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_communications_list',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-default">Communications</a></li>
        <li class="list-group-item"><a href="{{ path('slight_scribe_admin_project_version_new_communication',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-warning">Communication - New</a></li>
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_files_list',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-default">Files</a></li>
        <li class="list-group-item"><a href="{{ path('slight_scribe_admin_project_version_new_file',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-warning">File - New</a></li>
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_runs_list',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-default">Runs</a></li>
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_new_version',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-warning">New Version</a></li>
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_version_publish',{'projectId':project.publicId,'versionId':version.publicId}) }}" class="btn btn-warning">Publish this Version</a></li>
    </ul>

{% endblock %}
