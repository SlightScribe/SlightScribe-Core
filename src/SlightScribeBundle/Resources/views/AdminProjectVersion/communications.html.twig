{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_version_show',{ 'projectId':project.publicId,'versionId':version.publicId }) }}">Version: {{  version.titleAdmin }}</a></li>
        <li class="active">Communications</li>
    </ol>

    {% if communications %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Communication</th>
                <th>Title</th>
                <th>Sequence</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for communication in communications %}
                <tr>
                    <td>{{ communication.publicId }}</td>
                    <td>{{ communication.titleAdmin }}</td>
                    <td>{{ communication.sequence }}</td>
                    <td class="action-link"><a href="{{  path('slight_scribe_admin_project_version_communication_show',{'projectId':project.publicId,'versionId':version.publicId,'communicationId':communication.publicId}) }}" class="btn btn-default">View</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No communications</p>
    {% endif %}

{% endblock %}
