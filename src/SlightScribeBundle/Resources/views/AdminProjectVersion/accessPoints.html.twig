{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_version_show',{ 'projectId':project.publicId,'versionId':version.publicId }) }}">Version: {{  version.titleAdmin }}</a></li>
        <li class="active">Access Points</li>
    </ol>

    {% if accessPoints %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Access Point</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for accessPoint in accessPoints %}
                <tr>
                    <td>{{ accessPoint.titleAdmin }}</td>
                    <td class="action-link">
                        <a href="{{  path('slight_scribe_admin_project_version_access_point_show',{'projectId':project.publicId,'versionId':version.publicId,'accessPointId':accessPoint.publicId}) }}" class="btn btn-default">
                            View
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No runs</p>
    {% endif %}

{% endblock %}
