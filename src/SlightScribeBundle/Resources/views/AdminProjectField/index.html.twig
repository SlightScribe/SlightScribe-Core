{%  extends 'SlightScribeBundle::base.html.twig' %}

{% block main %}

    <ol class="breadcrumb">
        <li><a href="{{ path('slight_scribe_admin_homepage') }}">Admin</a></li>
        <li><a href="{{ path('slight_scribe_admin_project_show',{ 'projectId':project.publicId }) }}">Project: {{  project.titleAdmin }}</a></li>
        <li class="active">Field: {{  field.titleAdmin }}</li>
    </ol>

    <h2>Project {{  project.titleAdmin }} Field {{  field.titleAdmin }}</h2>

    <p>Title (For Admins)</p>

    <p>{{ field.titleAdmin  }}</p>

    <p>Label</p>

    <p>{{ field.label  }}</p>

    <p>Description</p>

    <p>{{ field.description  }}</p>

    <ul class="list-group">
        <li class="list-group-item"><a href="{{  path('slight_scribe_admin_project_field_edit',{'projectId':project.publicId,'fieldId':field.publicId}) }}" class="btn btn-warning">Edit</a></li>
    </ul>

{% endblock %}
